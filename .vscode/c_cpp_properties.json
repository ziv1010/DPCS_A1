{
    "configurations": [
        {
            "name": "Mac",
            "includePath": [
                "${workspaceFolder}/**",
                "/opt/homebrew/opt/glew/include",     // Path to GLEW headers
                "/opt/homebrew/opt/glfw/include",     // Path to GLFW headers
                "/opt/homebrew/opt/glm/include"       // Path to GLM headers (optional)
            ],
            "defines": [],
            "macFrameworkPath": [
                "/System/Library/Frameworks",
                "/Library/Frameworks"
